    <script>
    function showDetails(language) {
        alert(Explore more about ${language}! (Note: This is a placeholder for further interactivity));
    }

    function startTest(language) {
        if (language === 'Spanish') {
            window.open('https://www.esl-languages.com/en/online-language-tests/spanish-test/start-test', '_blank');
        } else {
            alert(Get ready for the ${language} test! (Note: This is a placeholder for the test functionality));
        }
    }
